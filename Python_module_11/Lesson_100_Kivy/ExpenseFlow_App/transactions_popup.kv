<TransactionPopup>
    auto_dismiss: True
    title: ""
    separator_height: 0
    size_hint: 0.45, 0.55

    FloatLayout:
        orientation: "vertical"
        size: 0.5, 0.5
        padding: 0, 10, 10, 10
        border: 50
        border_color: (0.15, 0.15, 0.15, 1)
        canvas.before:
            Color:
                rgba: 0.15, 0.15, 0.15, 1

            RoundedRectangle:
                pos: self.x - 30, self.y - 30
                size: self.width + 60, self.height + 95
                radius: [30]
        Image:
            source: 'img/Add Transaction.png'
            size_hint_x: 2.4
            size_hint_y: 0.07
            pos_hint: {'top': 1.07}
        Image:
            source: 'img/Amount.png'
            size_hint_x: 1.765
            size_hint_y: 0.07
            pos_hint: {'top': 0.84}

        TextInput:
            id: transaction_amount
            multiline: False
            background_color: 0.30, 0.30, 0.30, 1
            text: ''
            font_size: 45
            foreground_color: 1,1,1,1
            size_hint_x: 0.8
            size_hint_y: 0.14
            pos_hint: {'top': 0.75, 'x': 0.11}

        Image:
            source: 'img/Category.png'
            size_hint_x: 1.779
            size_hint_y: 0.07
            pos_hint: {'top': 0.49}

        Spinner:
            id: selected_category
            background_color: 0.80, 0.80, 0.80, 1
            text: 'Home'
            font_size: 40
            size_hint_x: 0.8
            size_hint_y: 0.14
            pos_hint: {'top': 0.40, 'x': 0.11}
            values: ['Groceries', 'Transport', 'Shopping', 'Health', 'Home', 'Salary', 'Entertainment']

        Button:
            id: addtransaction_popup
            background_normal: 'img/add_transaction_btn.png'
            size_hint_x: 0.49
            size_hint_y: 0.115
            pos_hint: {'top': 0.14, 'x': 0.27}
            on_release: root.add_transaction()    